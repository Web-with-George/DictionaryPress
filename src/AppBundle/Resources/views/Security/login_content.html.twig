{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'resetting.request.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />

    <div class="row">
        <div class="columns large-6">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="columns large-6">
            <div class="button-group" style="float:right;">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="button secondary"  style="font-weight: bolder;" />
                <span><a href="{{ path('fos_user_resetting_request') }}" class="button secondary">{{ 'login.forgot_password'|trans({},'AppBundle') }}</a></span>
            </div>
        </div>
    </div>
</form>

{% if error %}
    <div class="callout alert" data-closable>{{ error.messageKey|trans(error.messageData, 'security') }}
        <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endif %}